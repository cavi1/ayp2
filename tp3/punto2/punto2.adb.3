with Ada.Integer_Text_Io;
use Ada.Integer_Text_Io;

procedure Punto2 is
   
   function Incognita (N: Integer) return Integer is
   begin
      if N=0 then
         return Incognita (N);
      else
         return Incognita (N / 3 +1) + N -1;
      end if;
   end Incognita;

N: Integer;

begin
   Get(N);
    put(" el valor de la incognita es" &float'image(float(Incognita(N))));
end Punto2;

