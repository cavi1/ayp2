         Restoaux:= M-N;
         exit when Restoaux < 0.0;
      end loop;
      Restoaux:= Restoaux + N;
      return Restoaux;
   end Resto;
      
   
   function Mcd_Recur (M,N: float) return Float is
   begin
      if N>M then
         return (Mcd_Recur(N,M));
